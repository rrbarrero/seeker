# === Application Environment ===
# development, production, testing
ENVIRONMENT=development
# Enable/disable OpenTelemetry observability
OBS_ENABLED=false

# === Database Configuration ===
# Postgres user for connection
POSTGRES_USER=postgres
# Postgres password
POSTGRES_PASSWORD=postgres
# Postgres database name (default for docker service)
POSTGRES_DB=postgres
# Hostname of the database server
POSTGRES_HOST=localhost
# Port of the database server
POSTGRES_PORT=5432
# Full connection string for SQLx and application usage
# Format: postgres://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgres://postgres:postgres@localhost:5432/develdb
# Set to true to disable compile-time SQL checks if DB is not available
SQLX_OFFLINE=false

# === Security ===
# Secret key for signing JWT tokens. Change this in production!
JWT_SECRET=1234abcd1234abcd

# === Network & CORS ===
# Origins allowed to make requests to the API (e.g. frontend URL)
CORS_ALLOWED_ORIGIN=http://localhost:3001

# === Frontend Integration ===
# Public URL of the frontend application (used for email links, etc.)
FRONTEND_URL=http://localhost:3001

# === Rate Limiting ===
# Enable/disable global rate limiting middleware
RATE_LIMIT_ENABLED=false
# Requests per second per client (token bucket fill rate)
RATE_LIMIT_RPS=10
# Maximum burst size per client
RATE_LIMIT_BURST=20
# Trust X-Forwarded-For / X-Real-IP headers for client identification
RATE_LIMIT_TRUST_FORWARDED_HEADERS=false

# === Garage (S3-compatible storage) ===
# Generate secure values for these in production
# GARAGE_RPC_SECRET should be 32 bytes of random hex (64 chars):
#   openssl rand -hex 32
GARAGE_RPC_SECRET=CHANGE_ME_RPC_SECRET
GARAGE_ADMIN_TOKEN=CHANGE_ME_ADMIN_TOKEN
GARAGE_METRICS_TOKEN=CHANGE_ME_METRICS_TOKEN

# Garage / S3 Development Credentials
AWS_ACCESS_KEY_ID=key_id
AWS_SECRET_ACCESS_KEY=access_key
AWS_REGION=garage
AWS_ENDPOINT_URL=http://localhost:3900
S3_BUCKET_NAME=dev-bucket
S3_SCRAPER_BUCKET=scraper-data

LLM_SELECTED=groq # groq | fake
GROQ_API_TOKEN=token-here
GROQ_MODEL=groq/compound
